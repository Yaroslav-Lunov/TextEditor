<Window x:Class="Text_Editor.GoToPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Text_Editor"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="GoToPopup" Height="100" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>

            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Margin="5" Padding="0" Content="Go To:" VerticalAlignment="Center"/>

        <xctk:IntegerUpDown Minimum="1" Grid.Column="0" Grid.Row="0" Margin="45,5,5,5" Name="what"/>

        <Button Grid.Column="2" Grid.Row="0" Content="Go" Margin="5" Click="Go_Click"/>
        <Button Grid.Column="2" Grid.Row="1" Content="Cancel" Margin="5" Click="Cancel_Click"/>
    </Grid>
</Window>
