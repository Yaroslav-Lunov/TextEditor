<Window x:Class="Text_Editor.FindPopup"
        ResizeMode="NoResize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Text_Editor"
        mc:Ignorable="d"
        Title="Find" Height="100" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Label Content="Find What:" VerticalAlignment="Center"/> 
        <TextBox Margin="70,5,5,5" Name="inputField"/>

        <Button Grid.Column="1" Content="Find" Margin="5" Click="Find_Click"/>
        <Button Grid.Column="1" Grid.Row="1" Content="Cancel" Margin="5" Click="Cancel_Click"/>
        <CheckBox Grid.Row="1" Margin="5,0,0,0"  VerticalAlignment="Center" Name="matchCaseCheckBox"/>
        <Label Content="Match case" Grid.Row="1" Margin="25,0,0,0" Padding="0" VerticalAlignment="Center"/>
    </Grid>

</Window>
